<!-- Following Menu -->
<div class="ui large top fixed hidden menu">
    <div class="ui container">
        <a href="/home" class="item">Home</a>
        <a href="/school" class="item">School</a>
        <a href="/users" class="item">Users</a>
        <a href="/notifications" class="active item">Notifications</a>
        <div class="right menu">
            <div class="item">
                <a class="signout ui primary button">Sign Out</a>
            </div>
        </div>
    </div>
</div>
<!-- Sidebar Menu -->
<div class="ui vertical inverted  sidebar menu">
    <a href="/home" class="item">Home</a>
    <a href="/school" class="item">School</a>
    <a href="/users" class="item">Users</a>
    <a href="/notifications" class="active item">Notifications</a>
    <a class="signout item">Sign Out</a>
</div>
<!-- Page Contents -->
<div class="pusher">
    <div class="ui inverted  vertical masthead aligned segment">
        <div class="ui container">
            <div class="ui large secondary inverted  pointing menu">
                <a class="toc item">
                    <i class="sidebar icon"></i>
                </a>
                <a href="/home" class="item">Home</a>
                <a href="/school" class="item">School</a>
                <a href="/users" class="item">Users</a>
                <a href="/notifications" class="active item">Notifications</a>
                <div class="right item">
                    <a class="ui signout inverted  button">Sign Out</a>
                </div>
            </div>
        </div>
        <div class="ui container">
            <form class="ui form segment">
                <h4 class="ui dividing header">Message</h4>
                <div class="field">
                    <label>Subject</label>
                    <div class="fields">
                        <div class="field">
                            <input {{#if readonly}}readonly{{/if}} type="text" name="subject" {{#if subject}}value="{{subject}}" {{/if}} placeholder="Subject">
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label>Description</label>
                    <div class="fields">
                        <div class="field">
                            <input {{#if readonly}}readonly{{/if}} type="text" name="description" {{#if description}}value="{{description}}" {{/if}}
                                placeholder="Subject">
                        </div>
                    </div>
                </div>
                <div class="ui list">
                    {{#each users}}
                    <div class="item">
                        <div class="ui toggle checkbox">
                            <input id={{id}} value={{phone}} type="checkbox" name="users">
                        </div>
                        <img class="ui avatar image" src="/assets/images/rachel.png">
                        <div class="content">
                            <a href="/user/{{guid}}" class="header">{{firstName}} {{lastName}}</a>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <input {{#if readonly}}readonly{{/if}} type="text" class="hiddenInput" disabled name="guid" {{#if guid}}value="{{guid}}"
                    {{/if}}> {{#if readonly}}
                <div class=" ui two column ">
                    <div class="column row ">
                        <a class="ui primary button" href="/edit/user/{{guid}}">Edit</a>
                    </div>
                </div>
                {{else}}
                <div class=" ui two column ">
                    <div class="column row ">
                        <button type="submit" id="signupUserSubmit" class="ui green button" tabindex="0 ">Save</button>
                    </div>
                </div>
                {{/if}}
                <div class="ui icon hidden message processing">
                    <div class="content">
                        <div class="header">
                            Just one second
                        </div>
                        <p>We're saving your Information.</p>
                    </div>
                </div>
                <div class="ui negative hidden message failed">
                    <div class="header">
                        We're sorry we can't add this notification
                    </div>
                    <p></p>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="/assets/js/home.js"></script>
<script src="/assets/js/notification.js"></script>